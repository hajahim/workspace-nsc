script(type='text/javascript').

    $(document).on('ready', function() {
        $('#nutrition').click(function() {
            $('html,body').animate({scrollTop: $("#nutrition-ancre").offset().top}, 'slow');
        });  
        $(".regular").slick({
            dots: true,
            infinite: true,
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 2000,
            fade: true,
            cssEase: 'linear'
        });
    });
    function scrollTo(div_name,ancre_name){
        $('#'+div_name).click(function() {
            $('html,body').animate({scrollTop: $("#"+ancre_name).offset().top}, 'slow');
        });  
    }